<mvc:View
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:forms="sap.ui.layout.form"
		xmlns:core="sap.ui.core"
		xmlns="sap.m"
		>

	<forms:SimpleForm labelSpanL="4" labelSpanM="4"
					  labelSpanS="4" emptySpanL="0" emptySpanM="0" emptySpanS="0"
					  maxContainerCols="2"
					  layout="ResponsiveLayout"
					  width="100%">
		<core:Title text="{i18n>view.profile.block.phonenumber.header}"></core:Title>
		<Label text="{i18n>view.profile.block.phonenumber.mobile}"/>
		<Text text="{Phone/Mobile}"/>
		<Label text="{i18n>view.profile.block.phonenumber.work}"/>
		<Text text="{Phone/Work}"/>
		<Label text="{i18n>view.profile.block.phonenumber.home}"/>
		<Text text="{Phone/Home}"/>
	</forms:SimpleForm>

</mvc:View>